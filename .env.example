# .env
PORT=3000
ALLOWED_ORIGIN=http://localhost:3000

# SMTP (مثال: SMTP سرویس ایمیل یا SendGrid / Mailgun)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# آدرس فرستنده (اختیاری)
FROM_EMAIL=no-reply@yourdomain.com

# ایمیل صاحب سایت (جایی که اعلان سفارش میاد)
OWNER_EMAIL=planvestfirst@gmail.com

# آدرس قرارداد (بعدا می‌دی)
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# توکن ساده برای دسترسی به /admin/orders
ADMIN_TOKEN=your-secret-admin-token
